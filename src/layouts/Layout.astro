---
import Analytics from "@vercel/analytics/astro";
import "../styles/global.css";
import "nes.css/css/nes.min.css";
import { Navbar } from "./Navbar";
import { Footer } from "./Footer";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!--Title-->
    <title>Fernando Solorzano</title>
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <!--Font-->
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=IBM+Plex+Mono:wght@400;700&family=Rubik:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <Analytics />
  </head>
  <body>
    <Navbar client:load />
    <main>
      <slot />
    </main>
    <!--Social Networks-->
    <div class="icon-list">
      <!-- linkedin -->
      <a href="https://www.linkedin.com/in/fernanddo-dev/" target="_blank">
        <i class="nes-icon is-medium-custom linkedin"></i>
      </a>
      <!-- github -->
      <a href="https://github.com/Fernandd0" target="_blank">
        <i class="nes-icon is-medium-custom github"></i>
      </a>
      <!-- twitter -->
      <a href="https://twitter.com/Fernandddd0" target="_blank">
        <i class="nes-icon is-medium-custom twitter"></i>
      </a>
      <!-- gmail -->
      <a href="mailto:fernando.sc.contacto@gmail.com" target="_blank">
        <i class="nes-icon is-medium-custom gmail"></i>
      </a>
    </div>
    <Footer client:load />
  </body>
</html>
