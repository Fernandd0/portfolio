---
import 'nes.css/css/nes.min.css'
import '../styles/global.css'
import { Navbar } from './Navbar'
import { Footer } from './Footer'
import { SocialNetworks } from '../components/ui/SocialNetworks'
import { BtnScrollTop } from '../components/ui/BtnScrollTop'
import Analytics from '@vercel/analytics/astro'
import { Cat } from '../components/widgets/cat/cat'
import OpenPanelTracker from '../components/widgets/OpenPanelTracker.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Fernando Solorzano</title>

    <!-- Basic SEO -->
    <meta
      name="description"
      content="Portfolio of Fernando Solorzano — Software Engineer. I build clean, scalable web apps with a focus on performance, simplicity, and real value."
    />
    <meta
      name="keywords"
      content="Fernando Solorzano, software engineer, full stack, frontend, backend, portfolio, Astro, React, Vue, Node.js, Next.js, JavaScript, TypeScript, Tailwind, web development, Fernando Solorzano dev."
    />
    <meta name="author" content="Fernando Solorzano" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://fernan-do.dev/" />
    <meta name="language" content="en" />
    <meta name="theme-color" content="#000000" />

    <!-- Open Graph -->
    <meta property="og:title" content="Fernando Solorzano — Software Engineer" />
    <meta
      property="og:description"
      content="Clean, scalable web apps. Less complexity, more value. Explore my work and get in touch."
    />
    <meta property="og:image" content="https://fernan-do.dev/preview.webp" />
    <meta property="og:url" content="https://fernan-do.dev/" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Fernando Solorzano — Portfolio" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Fernando Solorzano — Software Engineer" />
    <meta
      name="twitter:description"
      content="I build clean, scalable web apps focused on performance and real impact."
    />
    <meta name="twitter:image" content="https://fernan-do.dev/preview.webp" />
    <meta name="twitter:site" content="@Fernandddd0" />
    <meta name="twitter:creator" content="@Fernandddd0" />

    <!-- Icons & Fonts -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="generator" content={Astro.generator} />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "@id": "https://fernan-do.dev/#fernando-solorzano",
        "name": "Fernando Solorzano",
        "url": "https://fernan-do.dev",
        "image": "https://fernan-do.dev/_astro/me-hero-4.Dx7q97DV.webp",
        "description": "Software Engineer focused on building modern, performant web applications using Next.js, React, Astro, and Node.js.",
        "jobTitle": "Software Engineer",
        "knowsAbout": [
          "JavaScript",
          "TypeScript",
          "React",
          "Astro",
          "Next.js",
          "Vue.js",
          "Node.js",
          "Python",
          "PostgreSQL",
          "SQL",
          "REST APIs",
          "Web Performance Optimization",
          "Technical SEO"
        ],
        "sameAs": [
          "https://github.com/Fernandd0",
          "https://www.linkedin.com/in/fernan-do/"
          "https://twitter.com/Fernandddd0"
        ]
      }
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=IBM+Plex+Mono:wght@400;700&family=Rubik:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />

    <Analytics />
  </head>
  <body>
    <div class="bg-original"></div>
    <Navbar client:load />
    <main>
      <slot />
    </main>
    <SocialNetworks client:load />
    <BtnScrollTop client:load />
    <Footer client:load />
    <Cat client:idle />
    <OpenPanelTracker />
  </body>
</html>
