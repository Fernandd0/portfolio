---
import "nes.css/css/nes.min.css";
import "../styles/global.css";
import { Navbar } from "./Navbar";
import { Footer } from "./Footer";
import { SocialNetworks } from "../components/ui/SocialNetworks";
import { BtnScrollTop } from "../components/ui/BtnScrollTop";
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Fernando Solorzano</title>
    <!-- SEO Básico -->
    <meta
      name="description"
      content="Portafolio de Fernando Solorzano: desarrollador de software, frontend y creativo digital en Lima, Perú."
    />
    <meta
      name="keywords"
      content="Fernando Solorzano, desarrollador software, frontend, backend, portafolio, Astro, React, JavaScript, TypeScript, HTML, CSS, Tailwind, diseño web, software engineer, Lima, Perú"
    />
    <meta name="author" content="Fernando Solorzano" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph (para Facebook, LinkedIn, etc.) -->
    <meta
      property="og:title"
      content="Fernando Solorzano - Desarrollador de Software, Frontend"
    />
    <meta
      property="og:description"
      content="Explora el portafolio de Fernando Solorzano, desarrollador de software, frontend, creativo con enfoque moderno."
    />
    <meta
      property="og:image"
      content="https://fernanddo.vercel.app/preview.webp"
    />
    <meta property="og:url" content="https://fernanddo.vercel.app/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Fernando Solorzano - Desarrollador de Software."
    />
    <meta
      name="twitter:description"
      content="Desarrollador creativo enfocado en soluciones digitales modernas. ¡Conoce mis proyectos!"
    />
    <meta
      name="twitter:image"
      content="https://fernanddo.vercel.app/preview.webp"
    />
    <meta name="twitter:site" content="@Fernandddd0" />

    <!-- Íconos y fuentes -->
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=IBM+Plex+Mono:wght@400;700&family=Rubik:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <Analytics />
  </head>
  <body>
    <Navbar client:load />
    <main>
      <slot />
    </main>
    <SocialNetworks />
    <BtnScrollTop client:load />
    <Footer client:load />
  </body>
</html>
